# Application
NODE_ENV=development
PORT=3001

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# JWT Configuration (for NestJS JWT module)
JWT_SECRET=your-nestjs-jwt-secret
JWT_EXPIRES_IN=1h

# Rate Limiting
THROTTLER_TTL=60
THROTTLER_LIMIT=10

# SMS Configuration (Twilio or MSG91)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# MSG91 Configuration
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=your-sender-id

# Database (for local development, if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/hostel_db
