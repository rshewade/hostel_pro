{
  "name": "hostel-management",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run json-server\" \"npm --prefix frontend run dev\"",
    "dev:backend": "npm --prefix backend run start:dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm --prefix frontend run dev\"",
    "json-server": "json-server --watch db.json --port 4001 --host 0.0.0.0",
    "build": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "start": "npm --prefix frontend run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "json-server": "^0.17.4"
  },
  "dependencies": {
    "accepts": "^1.3.8",
    "tailwindcss": "^4.1.18"
  }
}
